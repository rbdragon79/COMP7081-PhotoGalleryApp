<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a00834304.photogalleryapp.ResizeImageActivity">

    <ImageView
        android:id="@+id/imgFull"
        android:layout_width="216dp"
        android:layout_height="324dp"
        app:srcCompat="@drawable/full"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn50"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgFull"
        android:layout_marginTop="10dp"
        android:text="REDUCE BY 50%"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn33"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn50"
        android:text="REDUCE BY 33%"
        android:onClick="onClick"
        android:layout_alignLeft="@+id/btn50"
        android:layout_alignStart="@+id/btn50" />

    <Button
        android:id="@+id/btn25"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn33"
        android:text="REDUCE BY 25%"
        android:onClick="onClick"
        android:layout_alignLeft="@+id/btn50"
        android:layout_alignStart="@+id/btn50" />

</RelativeLayout>
